<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/round_white_rectangle_low_corner"
    android:clickable="true"
    android:elevation="8dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_category_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_category_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_category_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Category #1"
        android:layout_margin="10dp"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_category_pic"
        app:layout_constraintStart_toEndOf="@id/iv_category_pic"
        app:layout_constraintTop_toTopOf="@id/iv_category_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>